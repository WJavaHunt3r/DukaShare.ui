<?xml version="1.0" encoding="utf-8"?><!-- Adding the same root's ID for view binding as other layout configurations -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_container"
    android:layout_width="match_parent"
    android:background="@color/primaryColor"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvRegisteredText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/secondaryLightColor"
        android:textSize="16sp"
        android:text="@string/registered_to"
        android:gravity="center"
        android:paddingTop="20dp"
        android:fontFamily="sans-serif-medium"/>
    <TextView
        android:id="@+id/tvActivityCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvRegisteredText"
        app:layout_constraintBottom_toTopOf="@id/line1"
        android:textSize="30sp"
        android:textColor="@color/secondaryLightColor"
        android:text="@string/activity_count"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"/>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a3a3a3"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvActivityCount"
        app:layout_constraintBottom_toTopOf="@id/activity_list"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_list"
        android:name="hu.ktk.it.dukashare.ActivityListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingBottom="50dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/line1"
        tools:context="hu.ktk.it.dukashare.ActivityDetailHostActivity"
        tools:listitem="@layout/single_activity" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_baseline_add_24"
        android:contentDescription="@string/add_activity"
        android:layout_margin="16dp"
        android:layout_marginBottom="100dp"
        android:visibility="invisible"
        android:backgroundTint="@color/lightGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>