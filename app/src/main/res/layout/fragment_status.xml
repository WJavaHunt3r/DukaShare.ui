<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryColor"
    tools:context=".DukaShare">

    <TextView
        android:id="@+id/tvHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llHours"
        android:textColor="@color/secondaryLightColor"
        android:textSize="40sp"
        android:text="@string/hours"
        android:gravity="center"
        android:paddingTop="35dp"
        android:paddingBottom="10dp"
        android:fontFamily="sans-serif-medium"/>

    <LinearLayout
        android:id="@+id/llHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_back"
        app:layout_constraintTop_toBottomOf="@id/tvHours">
        <ListView
            android:id="@+id/elvClosedRegistrations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

